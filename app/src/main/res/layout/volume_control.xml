<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ToggleButton
        android:id="@+id/sys_volume_control_mute"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/mute_button_mini"
        android:textOff=""
        android:textOn="" />

    <SeekBar
        android:id="@+id/sys_volume_control"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sys_volume_control_mute" />

    <ToggleButton
        android:id="@+id/player_volume_control_mute"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/sys_volume_control_mute"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/media_button"
        android:textOff=""
        android:textOn=""
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/player_volume_control"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sys_volume_control"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/player_volume_control_mute"
        android:visibility="gone" />
</merge>